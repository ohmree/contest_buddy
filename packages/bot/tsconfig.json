{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$root/*": [
                "../*"
            ],
            "~/*": [
                "./*"
            ]
        },
        "rootDir": ".",
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
