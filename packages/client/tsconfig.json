{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "$root/*": [
        "../*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "lib": [
      "dom"
    ],
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "references": [
    {
      "path": "../server"
    }
  ],
  "include": [
    "src/**/*",
    "shims.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
