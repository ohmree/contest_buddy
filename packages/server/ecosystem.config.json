{
  "apps": [
    {
      "name": "Server",
      "script": "dist/src/index.js",
      "watch": ".",
      "source_map_support": true,
      "env": {
        "PORT": 3000,
        "NODE_ENV": "development"
      },
      "env_production": {
        "PORT": 80,
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "SSH_USERNAME",
      "host": "SSH_HOSTMACHINE",
      "ref": "origin/master",
      "repo": "GIT_REPOSITORY",
      "path": "DESTINATION_PATH",
      "pre-deploy-local": "",
      "post-deploy": "pnpm install && pm2 reload ecosystem.config.json --env production",
      "pre-setup": ""
    }
  }
}
