{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable"
    ],
    "types": ["reflect-metadata"],
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "$root/*": [
        "../*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "shims.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
